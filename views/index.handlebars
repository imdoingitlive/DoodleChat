<div class="container">

  <div class="jumbotron text-center">
    <h1><span class="fa fa-lock"></span> Node Authentication</h1>
  </div>

  <div class="col-sm-6 col-sm-offset-3" id="wrapper">
    <h1><span class="fa fa-sign-in"></span> Login or Register with:</h1>

    <!-- show any messages that come back with authentication -->
    <div id="message"></div>

    <!-- LOGIN FORM -->
    <form id="credentials">

      <div class="form-group">
          <label>Username</label>
          <input type="text" class="form-control" name="username">
      </div>

      <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password">
      </div>
      
      <div class="form-group">
          <label>Remember Me</label>
          <input type="checkbox" class="form-control" name="remember" value="yes">
      </div>

			<button type="submit" class="btn btn-warning btn-lg" id="login">Login</button>
      <button type="submit" class="btn btn-warning btn-lg" id="signup">Signup</button>

    </form>

  </div>
</div>

<!-- Index JS -->
<script src="./assets/js/index.js"></script>